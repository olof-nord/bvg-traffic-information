{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@api/*":  ["../api/*"],
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@environments/*": ["environments/*"],

      "@store/actions/*": ["app/store/actions/*"],
      "@store/effects/*": ["app/store/effects/*"],
      "@store/reducers/*": ["app/store/reducers/*"],
      "@store/selectors/*": ["app/store/selectors/*"],

      "@config/*": ["app/config/*"],
      "@config/bvg/*": ["app/config/bvg/*"],
      "@config/interceptor*": ["app/config/interceptor/*"],

      "@dashboard/*": ["app/dashboard/*"],
      "@header/*": ["app/header/*"],
      "@breadcrumb/*": ["app/breadcrumb/*"],
      "@messages/*": ["app/messages/*"],
      "@lines/*": ["app/lines/*"],
      "@line-summary/*": ["app/line-summary/*"]

    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
